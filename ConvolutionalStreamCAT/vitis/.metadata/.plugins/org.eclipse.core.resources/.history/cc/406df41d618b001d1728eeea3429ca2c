#include "video_disconnected.hpp"

VideoCaptureState* VideoDisconnected::instance_ = nullptr;

VideoCaptureState* VideoDisconnected::Instance(){
	if(instance_ == nullptr)
		instance_ = new VideoDisconnected;
	return instance_;
}

void VideoDisconnected::Connect(VideoCapture* context) {
	//TODO: Connect
	ChangeState(context, VideoConnected::Instance());
}

VideoDisconnected::VideoDisconnected(){

}

VideoDisconnected::~VideoDisconnected(){
	if(instance_ != nullptr)
		delete instance_;
}
