#include "video_streaming_paused.hpp"
#include "video_streaming_running.hpp"

VideoStreaminState* VideoStreamingPaused::instance_ = 0;

VideoStreamingState* VideoStreamingPaused::Instance(){
	if(instance_ == 0)
		instance_ = new VideoStreamingPaused;
	return instance_;
}

void VideoStreamingPaused::Start(VideoCapture* context){
	//TODO: Setup Streaming
	ChangeState(context, VideoStreaming::Instance());
}

VideoStreamingPaused::VideoStreamingPaused(){

}

VideoStreamingPaused::~VideoStreamingPaused(){
	if(instance_ != 0)
		delete instance_;
}
